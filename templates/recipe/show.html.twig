{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recipe.description }}</td>
            </tr>
            <tr>
                <th>Time_prepare</th>
                <td>{{ recipe.timePrepare }}</td>
            </tr>
            <tr>
                <th>Time_cooking</th>
                <td>{{ recipe.timeCooking }}</td>
            </tr>
            <tr>
                <th>Time_rest</th>
                <td>{{ recipe.timeRest }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>{{ recipe.ingredients ? recipe.ingredients|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Tools</th>
                <td>{{ recipe.tools ? recipe.tools|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Steps</th>
                <td>{{ recipe.steps ? recipe.steps|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Id_author</th>
                <td>{{ recipe.idAuthor }}</td>
            </tr>
            <tr>
                <th>Created_time</th>
                <td>{{ recipe.createdTime ? recipe.createdTime|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('recipe_index') }}">back to list</a>

    <a href="{{ path('recipe_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('recipe/_delete_form.html.twig') }}
{% endblock %}
